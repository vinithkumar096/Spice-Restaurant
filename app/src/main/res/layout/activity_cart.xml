<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout  android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rbg"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scrollbars="vertical"

            >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">



                <ImageView

                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/log"/>


                <TextView

                    android:text="Cart Details"
                    android:layout_margin="10dp"
                    android:textSize="25dp"
                    android:fontFamily="@font/graphikregular"
                    android:layout_gravity="center"

                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#34FDFBFB"
                    app:cardMaxElevation="@dimen/_6sdp">

                    <RelativeLayout
                        android:padding="@dimen/_6sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvname"
                            android:layout_marginLeft="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="#000"
                            android:text="Chicken Dum Biryani"
                            android:fontFamily="@font/graphikmedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <LinearLayout
                            android:id="@+id/ll"
                            android:layout_below="@+id/tvname"
                            android:layout_width="match_parent"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvquantity"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:lineSpacingExtra="@dimen/_5sdp"
                                android:maxLines="2"
                                android:text="Quantity : 1 \nPrice : $5 CAD"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_13sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:fontFamily="@font/graphikregular"
                                android:textColor="#000"
                                />

                            <ImageView
                                android:id="@+id/imgdelete"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:maxLines="2"
                                android:src="@drawable/ic_baseline_delete_24"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_13sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:fontFamily="@font/graphikregular"
                                android:textColor="#000"
                                />


                        </LinearLayout>



                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#34FDFBFB"
                    app:cardMaxElevation="@dimen/_6sdp">

                    <RelativeLayout
                        android:padding="@dimen/_6sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvname1"
                            android:layout_marginLeft="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="#000"
                            android:text="Chicken Fired Rice"
                            android:fontFamily="@font/graphikmedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <LinearLayout
                            android:id="@+id/ll1"
                            android:layout_below="@+id/tvname1"
                            android:layout_width="match_parent"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvquantity1"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:lineSpacingExtra="@dimen/_5sdp"
                                android:maxLines="2"
                                android:text="Quantity : 1 \nPrice : $10 CAD"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_13sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:fontFamily="@font/graphikregular"
                                android:textColor="#000"
                                />

                            <ImageView
                                android:id="@+id/imgdelete1"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:maxLines="2"
                                android:src="@drawable/ic_baseline_delete_24"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_13sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:fontFamily="@font/graphikregular"
                                android:textColor="#000"
                                />


                        </LinearLayout>



                    </RelativeLayout>


                </androidx.cardview.widget.CardView>
                <Button
                    android:id="@+id/btnPayment"
                    android:text="Make payment"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#fff"

                    android:fontFamily="@font/graphikregular"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textStyle="bold"
                    android:background="@drawable/button_rounded" />




            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>