<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rbg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardCornerRadius="1dp"
            android:layout_margin="4dp"

            app:cardMaxElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName"
                    android:text="Biryani"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/tvprice"
                    android:text="Chicken Dum Biyani"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:layout_below="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    android:id="@+id/imgfood"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:elevation="10dp">
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_marginLeft="0dp"
                        android:layout_alignParentRight="true"

                        android:src="@drawable/log"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />
                </androidx.cardview.widget.CardView>
                <TextView

                    android:text="$5 CAD"
                    android:textSize="13dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:layout_below="@+id/tvprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgfood"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    >

                    <Button
                        android:id="@+id/btnFav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:layout_margin="5dp"
                        android:text="Favourite"
                        />


                    <Button
                        android:id="@+id/btnCart"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:layout_margin="5dp"
                        android:text="Cart"

                        />

                </LinearLayout>





            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardCornerRadius="1dp"
            android:layout_margin="4dp"

            app:cardMaxElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName1"
                    android:text="Mutton Biryani"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/tvprice1"
                    android:text="Muntton Dum Biyani"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:layout_below="@+id/tvName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    android:id="@+id/imgfood1"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:elevation="10dp">
                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_marginLeft="0dp"
                        android:layout_alignParentRight="true"

                        android:src="@drawable/log"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />
                </androidx.cardview.widget.CardView>
                <TextView

                    android:text="$7 CAD"
                    android:textSize="13dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:layout_below="@+id/tvprice1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgfood1"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    >

                    <Button
                        android:id="@+id/btnFav1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:layout_margin="5dp"
                        android:text="Favourite"
                        />


                    <Button
                        android:id="@+id/btnCart1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:layout_margin="5dp"
                        android:text="Cart"

                        />

                </LinearLayout>





            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardCornerRadius="1dp"
            android:layout_margin="4dp"

            app:cardMaxElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName2"
                    android:text="Fired Rice"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/tvprice2"
                    android:text="Chicken Special Fired Rice"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:layout_below="@+id/tvName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    android:id="@+id/imgfood2"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:elevation="10dp">
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_marginLeft="0dp"
                        android:layout_alignParentRight="true"

                        android:src="@drawable/log"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />
                </androidx.cardview.widget.CardView>
                <TextView

                    android:text="$10 CAD"
                    android:textSize="13dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:layout_below="@+id/tvprice2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgfood2"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    >

                    <Button
                        android:id="@+id/btnFav2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:layout_margin="5dp"
                        android:text="Favourite"
                        />


                    <Button
                        android:id="@+id/btnCart2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:layout_margin="5dp"
                        android:text="Cart"

                        />

                </LinearLayout>





            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>





</ScrollView>